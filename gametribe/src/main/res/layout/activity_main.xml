<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/y1280"
    android:layout_height="@dimen/x720"
    android:orientation="vertical"
    tools:context="com.su.gametribe.MainActivity">

    <ImageView
        android:id="@+id/main_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg" />
    <!--顶部五个tab-->
    <LinearLayout
        android:id="@+id/top_tab_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/y30"
        android:layout_marginTop="@dimen/x20"
        android:orientation="horizontal">

        <Button
            android:id="@+id/main_top_tab1"
            style="@style/top_tab_bar"
            android:background="@drawable/top_tab_01_selector" />

        <Button
            android:id="@+id/main_top_tab2"
            style="@style/top_tab_bar"
            android:background="@drawable/top_tab_02_selector" />

        <Button
            android:id="@+id/main_top_tab3"
            style="@style/top_tab_bar"
            android:background="@drawable/top_tab_03_selector" />

        <Button
            android:id="@+id/main_top_tab4"
            style="@style/top_tab_bar"
            android:background="@drawable/top_tab_04_selector" />

        <Button
            android:id="@+id/main_top_tab5"
            style="@style/top_tab_bar"
            android:background="@drawable/top_tab_05_selector" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/top_tab_bar"
        android:layout_marginLeft="@dimen/y30"
        android:layout_marginRight="@dimen/y20"
        android:layout_marginTop="@dimen/y30"
        android:clipChildren="false"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipChildren="false"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clipChildren="false"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:clipChildren="false"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/top_left"
                        android:layout_width="@dimen/y338"
                        android:layout_height="@dimen/x194"
                        android:duplicateParentState="true"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:clickable="true"
                        android:src="@drawable/left_top" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:clipChildren="false"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/left_bottom1"
                            android:layout_width="@dimen/y165"
                            android:layout_height="@dimen/x134"
                            android:duplicateParentState="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:clickable="true"
                            android:src="@drawable/left_bottom1" />

                        <ImageView
                            android:id="@+id/left_bottom2"
                            android:layout_width="@dimen/y165"
                            android:layout_height="@dimen/x134"
                            android:layout_marginLeft="5dp"
                            android:duplicateParentState="true"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:clickable="true"
                            android:src="@drawable/left_bottom2" />
                    </LinearLayout>
                </LinearLayout>

                <ImageView
                    android:id="@+id/top_mid1"
                    android:layout_width="@dimen/y250"
                    android:layout_height="@dimen/x336"
                    android:layout_marginLeft="5dp"
                    android:duplicateParentState="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:src="@drawable/mid_1" />

                <ImageView
                    android:id="@+id/top_mid2"
                    android:layout_width="@dimen/y250"
                    android:layout_height="@dimen/x336"
                    android:layout_marginLeft="5dp"
                    android:duplicateParentState="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:src="@drawable/mid_2" />

                <ImageView
                    android:id="@+id/top_right"
                    android:layout_width="@dimen/x296"
                    android:layout_height="@dimen/y336"
                    android:layout_marginLeft="5dp"
                    android:duplicateParentState="true"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:clickable="true"
                    android:src="@drawable/top_right" />
            </LinearLayout>
            <!--一排的头像tab-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y10"
                android:layout_marginRight="@dimen/y10"
                android:layout_marginTop="@dimen/x20"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cent_01"
                    style="@style/cent_style"
                    android:src="@drawable/cent_01_selector" />

                <ImageView
                    android:id="@+id/cent_02"
                    style="@style/cent_style"
                    android:src="@drawable/cent_02_selector" />

                <ImageView
                    android:id="@+id/cent_03"
                    style="@style/cent_style"
                    android:src="@drawable/cent_03_selector" />

                <ImageView
                    android:id="@+id/cent_04"
                    style="@style/cent_style"
                    android:src="@drawable/cent_04_selector" />

                <ImageView
                    android:id="@+id/cent_05"
                    style="@style/cent_style"
                    android:src="@drawable/cent_05_selector" />

                <ImageView
                    android:id="@+id/cent_06"
                    style="@style/cent_style"
                    android:src="@drawable/cent_06_selector" />

                <ImageView
                    android:id="@+id/cent_07"
                    style="@style/cent_style"
                    android:src="@drawable/cent_07_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/y10"
                android:layout_marginRight="@dimen/y10"
                android:orientation="horizontal">

                <LinearLayout
                    style="@style/bottom_style"
                    android:background="@drawable/bottom_01">

                    <LinearLayout
                        android:id="@+id/ll_01"
                        style="@style/bottom_container_style"
                        android:layout_height="@dimen/x135"
                        android:layout_marginTop="@dimen/x120">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/y20"
                            android:src="@drawable/numb_01" />

                        <ImageView
                            android:layout_width="@dimen/y215"
                            android:layout_height="@dimen/x105"
                            android:layout_marginLeft="@dimen/y20"
                            android:src="@drawable/num_01_img" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_02"
                        style="@style/bottom_container_style">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/y25"
                            android:src="@drawable/numb_02" />

                        <TextView
                            style="@style/bottom_text_style"
                            android:text="宠物危机" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_03"
                        style="@style/bottom_container_style">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x25"
                            android:src="@drawable/numb_03" />

                        <TextView
                            style="@style/bottom_text_style"
                            android:text="咸蛋出击" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_04"
                        style="@style/bottom_container_style">

                        <TextView
                            style="@style/bottom_num_text_style"
                            android:text="4" />

                        <TextView
                            style="@style/bottom_text_style"
                            android:text="球球大作战" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_05"
                        style="@style/bottom_container_style">

                        <TextView
                            style="@style/bottom_num_text_style"
                            android:text="5" />

                        <TextView
                            style="@style/bottom_text_style"
                            android:text="贪吃蛇大战" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/bottom_style"
                    android:background="@drawable/bottom_02">

                    <LinearLayout
                        android:id="@+id/ll_021"
                        style="@style/bottom_container_style"
                        android:layout_height="@dimen/y135"
                        android:layout_marginTop="@dimen/y120">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x20"
                            android:src="@drawable/numb_01" />

                        <ImageView
                            android:layout_width="@dimen/x215"
                            android:layout_height="@dimen/y105"
                            android:layout_marginLeft="@dimen/x20"
                            android:src="@drawable/num_02_img" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_022"
                        style="@style/bottom_container_style">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x25"
                            android:src="@drawable/numb_02" />

                        <TextView
                            style="@style/bottom_text_style"
                            android:text="跳呀跳" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_023"
                        style="@style/bottom_container_style">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x25"
                            android:src="@drawable/numb_03" />

                        <TextView
                            style="@style/bottom_text_style"
                            android:text="迷你世界杯" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_024"
                        style="@style/bottom_container_style">

                        <TextView
                            style="@style/bottom_num_text_style"
                            android:text="4" />

                        <TextView
                            style="@style/bottom_text_style"
                            android:text="深海养鱼馆" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_025"
                        style="@style/bottom_container_style">

                        <TextView
                            style="@style/bottom_num_text_style"
                            android:text="5" />

                        <TextView
                            style="@style/bottom_text_style"
                            android:text="宠物消消乐" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    style="@style/bottom_style"
                    android:background="@drawable/bottom_03">

                    <LinearLayout
                        android:id="@+id/ll_031"
                        style="@style/bottom_container_style"
                        android:layout_height="@dimen/y135"
                        android:layout_marginTop="@dimen/y120">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x20"
                            android:src="@drawable/numb_01" />

                        <ImageView
                            android:layout_width="@dimen/x215"
                            android:layout_height="@dimen/y105"
                            android:layout_marginLeft="@dimen/x20"
                            android:src="@drawable/num_03_img" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_032"
                        style="@style/bottom_container_style">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x25"
                            android:src="@drawable/numb_02" />

                        <TextView
                            style="@style/bottom_text_style"
                            android:text="僵尸来袭" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_033"
                        style="@style/bottom_container_style">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/x25"
                            android:src="@drawable/numb_03" />

                        <TextView
                            style="@style/bottom_text_style"
                            android:text="炫斗三国" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_034"
                        style="@style/bottom_container_style">

                        <TextView
                            style="@style/bottom_num_text_style"
                            android:text="4" />

                        <TextView
                            style="@style/bottom_text_style"
                            android:text="战机联盟" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_035"
                        style="@style/bottom_container_style">

                        <TextView
                            style="@style/bottom_num_text_style"
                            android:text="5" />

                        <TextView
                            style="@style/bottom_text_style"
                            android:text="龙岛冒险" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <View
                android:id="@+id/bottom_withotuse_view"
                android:layout_width="0px"
                android:layout_height="0px"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:nextFocusUp="@id/cent_04"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
